{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build GCM Cache for std",
            "command": "mkdir -p gcm.cache && g++ -std=c++23 -O2 -fmodules -fsearch-include-path -fmodule-only -c bits/std.cc -o gcm.cache/std.gcm",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Generate GCM cache for std module"
        },
        {
            "type": "shell",
            "label": "Clean Project",
            "command": "rm -rf build gcm.cache module.map",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean build directory, GCM cache, and generated module.map"
        },
        {
            "type": "shell",
            "label": "CMake: Configure",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-G",
                "Unix Makefiles"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Configure CMake project"
        },
        {
            "type": "shell",
            "label": "CMake: Build",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake: Configure"],
            "detail": "Build CMake project"
        },
        {
            "type": "shell",
            "label": "Run: Ex1_01",
            "command": "${workspaceFolder}/build/exercises/Ex1_01/Ex1_01",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run Ex1_01 without debugging"
        },
        {
            "type": "shell",
            "label": "Run: Ex1_02",
            "command": "${workspaceFolder}/build/exercises/Ex1_02/Ex1_02",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run Ex1_02 without debugging"
        }
    ]
}
