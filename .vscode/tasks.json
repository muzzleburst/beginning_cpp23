{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Setup: Clone Apress Source Repository",
            "command": "${workspaceFolder}/setup_source.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clone or update the Apress Beginning C++23 source repository"
        },
        {
            "type": "shell",
            "label": "Build GCM Cache for std",
            "command": "mkdir -p gcm.cache && g++ -std=c++23 -O2 -fmodules -fsearch-include-path -fmodule-only -c bits/std.cc -o gcm.cache/std.gcm",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Generate GCM cache for std module"
        },
        {
            "type": "shell",
            "label": "Clean Project",
            "command": "rm -rf build gcm.cache module.map",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean build directory, GCM cache, and generated module.map"
        },
        {
            "type": "shell",
            "label": "CMake: Configure",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-G",
                "Unix Makefiles"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Configure CMake project"
        },
        {
            "type": "shell",
            "label": "CMake: Build",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake: Configure"],
            "detail": "Build all CMake targets"
        },
        {
            "type": "shell",
            "label": "CMake: Build test_increment_side_effects",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "test_increment_side_effects"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": ["CMake: Configure"],
            "detail": "Build only test_increment_side_effects"
        },
        {
            "type": "shell",
            "label": "CMake: Build test_unicode",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "test_unicode"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": ["CMake: Configure"],
            "detail": "Build only test_unicode"
        },
        {
            "type": "shell",
            "label": "CMake: Build exercise_2_1",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "exercise_2_1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": ["CMake: Configure"],
            "detail": "Build only exercise_2_1"
        },
        {
            "type": "shell",
            "label": "CMake: Build size_of_bitwise_result",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "size_of_bitwise_result"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": ["CMake: Configure"],
            "detail": "Build only size_of_bitwise_result"
        },
        {
            "type": "shell",
            "label": "Run: Ex1_01",
            "command": "${workspaceFolder}/build/Ex1_01",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run Ex1_01 without debugging"
        },
        {
            "type": "shell",
            "label": "Run: Ex2_01",
            "command": "${workspaceFolder}/build/Ex2_01",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run Ex2_01 without debugging"
        },
        {
            "type": "shell",
            "label": "Run: test_increment_side_effects",
            "command": "${workspaceFolder}/build/test_increment_side_effects",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build test_increment_side_effects"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run test_increment_side_effects without debugging"
        },
        {
            "type": "shell",
            "label": "Run: test_unicode",
            "command": "${workspaceFolder}/build/test_unicode",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build test_unicode"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run test_unicode without debugging"
        },
        {
            "type": "shell",
            "label": "Run: exercise_2_1",
            "command": "${workspaceFolder}/build/exercise_2_1",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build exercise_2_1"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run exercise_2_1 without debugging"
        },
        {
            "type": "shell",
            "label": "Run: size_of_bitwise_result",
            "command": "${workspaceFolder}/build/size_of_bitwise_result",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake: Build size_of_bitwise_result"],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Run size_of_bitwise_result without debugging"
        }
    ]
}
